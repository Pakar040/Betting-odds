import java.util.Random;
import java.util.Scanner;

public class YourProgram {
   public static void main(String[] args) {
      
      Random rand = new Random();
      Scanner scnr = new Scanner(System.in);
      
      
      // Customizeable odds/probability
      int johnsOdds = 154; // out of
      int handfulServes = 230;
      
      //Checks if wager is worth it
      int winBet = scnr.nextInt();
      int loseBet = scnr.nextInt();
      
      // Tracks runs
      int runs = 1000;
      int youWinBet = 0;
      int youLoseBet = 0;
      
      for (int j = 0 ; j < runs ; j++) {
         // Holds stats
         int numGames = 15;
         int johnsTotalWins = 0;
         int patsTotalWins = 0;
         
         // Loops through several games
         for (int i = 0 ; i < numGames ; i++) {
            
            // Tracks game score
            int johnsScore = 0;
            int patsScore = 0;
            int gameOver = 0;
            
            // Loops through each serve
            do {
               
               // Randomizes who gets point
               int randNum;
               randNum = rand.nextInt(handfulServes);
               
               if (randNum < johnsOdds) {
                  johnsScore++;
               } else {
                  patsScore++;
               }
               
               // Ends game based on score
               if ((johnsScore >= 4) && ((johnsScore - patsScore) >= 2)) {
                  gameOver = 1;
                  johnsTotalWins++;
               }
               
               if ((patsScore >= 4) && ((patsScore - johnsScore) >= 2)) {
                  gameOver = 1;
                  patsTotalWins++;
               }
               
            } while (gameOver != 1);
         }
         
         
         
         int winnings = (johnsTotalWins * winBet) - (patsTotalWins * loseBet);
         
         // Prints stats
         /*
         System.out.println("Total Games Played: " + numGames);
         System.out.println("Johns Total Wins: " + johnsTotalWins);
         System.out.println("Pats Total Wins: " + patsTotalWins);
         System.out.println("");
         */
         
         // Prints winnings
         //System.out.println("$" + winnings);
         if (winnings >= 0) {
            //System.out.println("You won"); Prints you won bet
            youWinBet++;
         } else {
            //System.out.println("You lost"); Prints you lost bet
            youLoseBet++;
         }
      }
      
      // Odds of winning bet
      double chanceOfWinning = (double)youWinBet / runs * 100;
      
      // Print odds
      System.out.println("Your odds of making money is " + chanceOfWinning + "%");
      
   }
}
